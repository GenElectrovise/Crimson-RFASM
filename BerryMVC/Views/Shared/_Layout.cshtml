@using Microsoft.AspNetCore.Components;

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Berry - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    @Html.Partial("_Favicons")
</head>

<body>

    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <ul class="navbar-nav">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/res/light/BerryLogo (Light).svg" runat="server" alt="Berry Logo" width="30" class="d-inline-block align-text-center">
                    Berry
                </a>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index"><i class="bi bi-house"></i> Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Browse"><i class="bi bi-search"></i> Browse</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-muted">
        <div class="container float-start">
            <p>
                &copy; 2023 - Berry - 
                <a asp-page="/Home/Privacy">Privacy</a> - 
                <a href="https://github.com/GenElectrovise/RF_ASM" class="text-white me-4">
                    <i class="bi bi-github"></i> 
                </a>
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/layout.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>